<mvc:View
    controllerName="cadastroNotas.controller.Cadastro"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page title="{i18n>tituloTelaCadastro}">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="2"
                singleContainerFullSize="false">
                <f:content>
                    <Label text="{i18n>textoCampoValor}" />
                    <Input
                        value="{notaFiscal>/Valor}"
                        type="Number"
                        placeholder="Digite o valor"
                        liveChange="onLiveChange"
                        required="true" />

                    <Label text="{i18n>textoCampoNomeDoFornecedor}" />
                    <Input
                        value="{notaFiscal>Fornecedor/NomeFornecedor}"
                        placeholder="Digite o nome do fornecedor"
                        required="true" />

                    <Label text="{i18n>textoCampoInscricaoDoFornecedor}" />
                    <Input
                        value="{notaFiscal>Fornecedor/InscricaoFornecedor}"
                        placeholder="Digite a inscrição do fornecedor"
                        required="true" />

                    <Label text="{i18n>textoCampoNomeDoCliente}" />
                    <Input
                        value="{notaFiscal>Cliente/NomeCliente}"
                        placeholder="Digite o nome do cliente"
                        required="true" />

                    <Label text="{i18n>textoCampoInscricaoDoCliente}" />
                    <Input
                        value="{notaFiscal>Cliente/InscricaoCliente}"
                        placeholder="Digite a inscrição do cliente"
                        required="true" />
                </f:content>
            </f:SimpleForm>

            <Button
                text="Cancelar"
                type="Neutral"
                press="aoClicarCancelarCadastro"
                class="sapUiSmallMarginTop" />
            <Button
                text="Salvar"
                type="Default"
                press="AoClicarEmSalvar"
                class="sapUiSmallMarginTop" />
        </content>
    </Page>
</mvc:View>